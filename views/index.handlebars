<p class="header">Eat-Da-Burger...while is hot!</p>

<img
  src="/assets/images/burger.jpg" alt="burger" />

<div class="wrapForm">
<p class="burgersTitle">Add "a royale with chesse"...or whatever</p>
<form class="create-form">
  <div class="form-group">
    <input type="text" id="burg" name="burger_name">
  </div>
  <button type="submit">Submit Burger</button>
</form>
</div>

<section class="container">
  <div class="burgerDiv">
    <p class="burgersTitle">Burgers to be devoured!</p>
    <ul>
      {{#each burgers}}
      {{#unless devoured}}
      {{> burgers/burger-block devour=false}}
      {{/unless}}
      {{/each}}
    </ul>
  </div>

  <div class="burgerDiv">
    <p class="burgersTitle">Yep, these have been devoured!</p>
    <ul>
      {{#each burgers}}
      {{#if devoured}}
      {{> burgers/burger-block devour=true}}
      {{/if}}
      {{/each}}
    </ul>
  </div>
</section>